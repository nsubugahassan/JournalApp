<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hansumi.journalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.entries.JournalAppMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.details.JournalEntryDetailsActivity"
            android:label="@string/title_activity_journal_entry_details"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".ui.entry.AddNewJournalEntryActivity"
            android:parentActivityName=".ui.entries.JournalAppMainActivity">

        </activity>
    </application>

</manifest>